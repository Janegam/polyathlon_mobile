<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:textColorHint">@color/colorCommonDark</item>
        <item name="android:textColor">@color/colorCommon</item>
        <item name="android:textColorPrimary">@color/colorCommon</item>
        <item name="android:textColorSecondary">@color/colorCommon</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="launchStyle">
        <item name="android:textSize">
            48sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>
    <style name="calendarTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
