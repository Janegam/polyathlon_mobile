<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterPage"
        android:id="@+id/main"
        android:background="@color/colorBackground">


    <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/launchTitle"
            android:textAppearance="@style/launchStyle"
            android:gravity="center_horizontal|center_vertical"

            android:visibility="visible"
            tools:visibility="visible"
            android:fontFamily="@font/comfortaa"
            android:typeface="normal"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2"
            android:layout_width="256dp"
            android:layout_height="258dp"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="@+id/some_id"
            android:contentDescription="@string/logodesc"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:clickable="true"
            android:cursorVisible="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/comfortaa"
            android:typeface="normal"
            android:textSize="18sp"
            android:focusable="true"
            android:background="@drawable/button_selector"

            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:text="@string/sign_up"
            app:layout_constraintTop_toBottomOf="@+id/some_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:freezesText="false"
            android:requiresFadingEdge="horizontal"
            android:gravity="center"
            android:layout_marginTop="65dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imageButton3"
            android:clickable="true"
            android:cursorVisible="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/comfortaa"
            android:typeface="normal"
            android:textSize="16sp"
            android:focusable="true"
            android:background="@drawable/blank_button_selector"

            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:text="@string/sign_in"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            android:freezesText="false"
            android:gravity="center"
            android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>