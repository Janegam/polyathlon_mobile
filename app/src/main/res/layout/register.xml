<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorBackground">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorBackground"
            android:id="@+id/scrollView4"
            app:layout_constraintTop_toTopOf="parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back"
                    android:background="@drawable/abc_vector_test"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>

            <TextView
                    android:text="Расскажите немного о себе"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorCommon"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/first_name3"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorCommon"
                        android:background="@drawable/blank_button_selector"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:selectAllOnFocus="true"
                        android:hint="Имя"/>

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/last_name3"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorCommon"
                        android:background="@drawable/blank_button_selector"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:selectAllOnFocus="true"
                        android:hint="Фамилия"/>

                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/blank_frame"
                        android:paddingLeft="15dp"
                        android:id="@+id/sexgroup">

                    <RadioButton
                            android:text="Ж"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/female"
                            android:textColor="@color/colorCommon"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"/>

                    <RadioButton
                            android:text="М"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/male"
                            android:textColor="@color/colorCommon"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_margin="20dp"
                            />

                </RadioGroup>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sex"
                        android:layout_gravity="center"/>

                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/regions3"
                        android:background="@drawable/blank_button_selector"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:popupBackground="@drawable/blank_frame"
                        android:foregroundGravity="center_vertical|right"
                        android:layout_marginTop="5dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_text"
                        android:textColor="@color/colorCommon"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:background="@drawable/blank_button_selector"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:hint="01.01.2000"/>


            </LinearLayout>


            <TextView
                    android:text="Вы состоите в клубе?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorCommon"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clubs3"
                    android:background="@drawable/blank_button_selector"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:dropDownSelector="@drawable/blank_button_selector"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@drawable/blank_frame"
                    android:foregroundGravity="center_vertical|right"
                    android:gravity="center"
                    />

            <TextView
                    android:text="Ваш разряд"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorCommon"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category3"
                    android:background="@drawable/blank_button_selector"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:dropDownSelector="@drawable/blank_button_selector"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="@drawable/blank_frame"
                    android:foregroundGravity="center_vertical|right"
                    android:gravity="center"
                    />

            <TextView
                    android:text="Данные для входа"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textColor="@color/colorCommon"
                    android:fontFamily="@font/comfortaa"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nikname3"
                    android:textColor="@color/colorCommon"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@drawable/blank_button_selector"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:selectAllOnFocus="true"
                    android:hint="Придумайте логин"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/lastpass3"
                    android:hint="Придумайте пароль"
                    android:textColor="@color/colorCommon"
                    android:textColorHint="@color/colorCommonDark"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/blank_button_selector"
                    android:paddingLeft="10dp"
                    android:password="true"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/newpass3"
                    android:hint="Повторите пароль"
                    android:textColor="@color/colorCommon"
                    android:textColorHint="@color/colorCommonDark"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/blank_button_selector"
                    android:paddingLeft="10dp"
                    android:password="true"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/constraintLayout">

                <TextView
                        android:text="Зарегистрироваться"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/singin"
                        android:textSize="18sp"
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/colorCommon"
                        android:drawableEnd="@drawable/ic_baseline_exit_to_app_24"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawablePadding="10dp"
                        android:gravity="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>