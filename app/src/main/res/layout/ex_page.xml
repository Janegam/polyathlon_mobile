<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SecondFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".RegisterPage"
            android:id="@+id/main"
            android:background="@color/colorBackground">

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:verticalScrollbarPosition="right"
                android:overScrollMode="ifContentScrolls"
                android:id="@+id/scrollView2">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/profileLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/exesView"
                            app:layout_constraintStart_toStartOf="parent"
                            android:fontFamily="@font/comfortaa"
                            android:textSize="30sp"
                            android:textColor="@color/colorCommon"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="Упражнение"
                            app:layout_constraintTop_toBottomOf="@+id/exImgView"/>

                    <ImageView
                            android:src="@drawable/runner"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:id="@+id/exImgView"
                            tools:srcCompat="@drawable/runner"
                            android:background="@drawable/ic_ellipse_25"
                            android:scaleType="centerInside"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="20dp"/>

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/back"
                            android:background="@drawable/abc_vector_test"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#80FFFFFF"
                        />

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:id="@+id/statistic_card">

                    <TextView
                            android:text="Статистика"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/statistic"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="start"/>

                    <TextView
                            android:text="Вид"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textColor="#80FFFFFF"
                            android:background="@drawable/blank_frame"
                            android:drawableStart="@drawable/ic_stadium"
                            android:textSize="12sp"
                            android:drawableLeft="@drawable/ic_stadium"
                            android:drawablePadding="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:gravity="bottom"
                            android:layout_marginBottom="10dp"/>

                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Competitions"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/colorCommon"
                            android:background="@drawable/blank_frame"
                            android:gravity="start|top"
                            android:paddingLeft="40dp"
                            android:paddingTop="2dp"
                            android:layout_marginBottom="10dp"/>

                    <TextView
                            android:text="Результат"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_gravity="bottom"
                            android:textColor="#80FFFFFF"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/blank_frame"
                            android:drawableLeft="@drawable/ic_places"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:drawablePadding="5dp"
                            android:textSize="12sp"
                            android:gravity="bottom"/>

                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Category"
                            android:layout_gravity="bottom"
                            android:textColor="@color/colorCommon"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/blank_frame"
                            android:gravity="start|top"
                            android:paddingTop="2dp"
                            android:paddingLeft="36dp"/>

                    <TextView
                            android:text="Очки"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_gravity="center|end"
                            android:textColor="#80FFFFFF"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/blank_frame"
                            android:drawableLeft="@drawable/ic_medal"
                            android:drawableStart="@drawable/ic_medal"
                            android:drawablePadding="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:gravity="bottom"
                            android:textSize="12sp"
                            android:layout_marginBottom="10dp"/>

                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Wins"
                            android:layout_gravity="right|center_vertical"
                            android:textColor="@color/colorCommon"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/blank_frame"
                            android:gravity="start|top"
                            android:paddingLeft="35dp"
                            android:paddingTop="2dp"
                            android:layout_marginBottom="10dp"/>

                    <TextView
                            android:text="Возрастная группа"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_gravity="bottom|end"
                            android:textColor="#80FFFFFF"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/blank_frame"
                            android:drawableLeft="@drawable/ic_sportsman"
                            android:drawableStart="@drawable/ic_sportsman"
                            android:drawablePadding="5dp"
                            android:paddingLeft="10dp"
                            android:gravity="bottom"
                            android:paddingBottom="5dp"
                            android:textSize="12sp"/>

                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/AgeGroup"
                            android:layout_gravity="bottom|end"
                            android:textColor="@color/colorCommon"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/blank_frame"
                            android:gravity="start|top"
                            android:paddingLeft="32dp"
                            android:paddingTop="2dp"/>

                </FrameLayout>

                <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#80FFFFFF"
                        />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>